                                                            TextColor="{StaticResource Primary}"
                                                            WidthRequest="30" />
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ConsumableOpenInfoBottemSheetCommand}" />
                                        </Border.GestureRecognizers>
                                    </Border>
                                </Grid>
                            </Border>
                            <!--#endregion-->
                            <!--#region Sayım Eksiği-->
                            <Border Grid.Row="1"
                                    Padding="5"
                                    HeightRequest="55"
                                    StrokeShape="RoundRectangle 5"
                                    StrokeThickness="0.2">
                                <Grid ColumnDefinitions=".85*,.15*"
