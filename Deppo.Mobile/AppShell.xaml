    <Shell.Resources>
        <ResourceDictionary>
            <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </Shell.Resources>

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate x:DataType="loginViewModel:LoginViewModel">
            <VerticalStackLayout Padding="10,20,10,20"
                                 HeightRequest="150"
                                 Spacing="20"
                                 VerticalOptions="Center">
                <Grid ColumnDefinitions="Auto,*"
                      ColumnSpacing="10">
                    <toolkit:AvatarView Grid.Column="0"
                                        BorderColor="{StaticResource Gray200}"
                                        BorderWidth="1"
                                        Padding="0"
                                        CornerRadius="100"
                                        HeightRequest="60"
                                        ImageSource="{Binding ApplicationUser.Image.MediaData, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                        WidthRequest="60">
                        <toolkit:AvatarView.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ProfileTappedCommand}" />
                        </toolkit:AvatarView.GestureRecognizers>
                    </toolkit:AvatarView>
                    <VerticalStackLayout Grid.Column="1"
                                         Spacing="5"
                                         VerticalOptions="Center">
                        <Label FontAttributes="Bold"
                               FontSize="Medium"
                               Text="{Binding ApplicationUser.FullName, TargetNullValue='-', FallbackValue='-'}"
                               TextColor="{StaticResource OffBlack}" />
                        <Label FontSize="Small"
                               Text="{Binding ApplicationUser.Position.Name, TargetNullValue='-', FallbackValue='-'}"
                               TextColor="{StaticResource Gray600}"
                               VerticalOptions="Center" />
                    </VerticalStackLayout>
                </Grid>
                <BoxView HeightRequest="2"
                         Opacity="0.8"
                         Color="{StaticResource White}" />
            </VerticalStackLayout>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="15"
                  ColumnDefinitions="Auto,Auto,*"
                  ColumnSpacing="10"
                  VerticalOptions="CenterAndExpand">
                <Image Grid.Column="0"
                       Aspect="AspectFill"
                       HeightRequest="20"
                       Source="{Binding Icon}"
                       WidthRequest="20" />
                <Label Grid.Column="1"
                       FontSize="20"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Title}"
                       TextColor="{StaticResource OffBlack}" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <Shell.FlyoutFooterTemplate>
        <DataTemplate x:DataType="loginViewModel:LoginViewModel">
            <VerticalStackLayout Margin="0,0,20,0"
                                 Padding="10"
                                 Spacing="5">
                <Button BackgroundColor="{StaticResource Secondary}"
                        Command="{Binding LogoutCommand}"
                        Text="Oturumu Kapat"
                        TextColor="{StaticResource OffBlack}" />
                <Label HorizontalOptions="Center"
                       Text="Copyright İyibir Yazılım ve Teknoloji"
                       TextColor="{StaticResource PrimaryLight}" />
            </VerticalStackLayout>
        </DataTemplate>
    </Shell.FlyoutFooterTemplate>

   
